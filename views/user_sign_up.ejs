

<link rel="stylesheet" href="/css/user_sign_up.css">


<div class="container">
    <div class="wrapper">
        <form action="/users/create"  method="POST" name="Login_Form"  enctype="multipart/form-data"  class="form-signin">
            <h3 class="form-signin-heading">Welcome! Please Sign UP</h3>

            <input type="text" name="name" placeholder="Your Name" required>
            <input type="email" name="email" placeholder="Your Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="password" name="confirm_password" placeholder="Confirm Password" required>
            <input type="file" name="avatar" placeholder="Profile Picture">

            <label for="utype">Choose account Type:</label>

            <select name="usertype" id="utype" required>
              <option value="Personal">Personal</option>
              <option value="Organization">Organization</option>
            </select>
            <input type="submit" value="Sign UP" class="btn btn-lg btn-primary btn-block"></input>

            <p>Already have an account? <a href="/users/sign-in">Sign In</a> </p> 
        </form>

        <%- include('_oAuth') -%>
    </div>

 
</div>

 