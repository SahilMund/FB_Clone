<link rel="stylesheet" href="/css/user_sign_in.css">


<div class="container">
    <div class="wrapper">
        <form action="/users/create-session" method="POST" name="Login_Form" class="form-signin">
            <h3 class="form-signin-heading">Welcome! Please Sign In</h3>

            <input type="email" class="form-control" name="email" placeholder="Email Address" required="" autofocus="" />
            <input type="password" class="form-control" name="password" placeholder="Password" required=""/>

            <input type="submit" value="Sign In" class="btn btn-lg btn-primary btn-block"></input>

            <p>Don't have an account? <a href="/users/sign-up">Signup</a> 
                ,it's free.</p> 
        </form>

        <%- include('_oAuth') -%>
    </div>
</div>

 